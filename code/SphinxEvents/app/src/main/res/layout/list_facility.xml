<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/list_facility_background">

    <TextView
        android:id="@+id/facility_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Facility Name"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/facility_phone_number_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/facility_phone_number_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facility Phone Number"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_marginStart="6dp"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>